generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"   // <-- base de donnÃ©e VERCEL
  url      = env("DATABASE_URL")
}


model User {
  id           String   @id @default(cuid())
  username     String   @unique
  name         String
  passwordHash String
  role         String   @default("TECH") // "TECH" ou "ADMIN" defaut automatiquement en temps que tech
  createdAt    DateTime @default(now())
  logs         Log[]    @relation("UserLogs")
}

model Log {
  id           String   @id @default(cuid())
  qrData       String
  lieu         String
  date         DateTime
  actorName    String
  etat         String   @default("CORRECT")
  photo        Bytes?
  photoType    String?
  createdAt    DateTime @default(now())
  createdById  String?
  createdBy    User?    @relation("UserLogs", fields: [createdById], references: [id])
}
