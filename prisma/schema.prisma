generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // â†” Pour SQLite: "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Scan {
  id           Int       @id @default(autoincrement())
  toolName     String
  serialNumber String?
  status       String?
  location     String?
  operator     String?
  note         String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  commonRecord Common?   @relation("ScanToCommon")

  @@map("SCAN")
}

model Common {
  id           Int      @id @default(autoincrement())
  toolName     String   @unique
  serialNumber String?
  status       String?
  location     String?
  operator     String?
  note         String?
  lastScanAt   DateTime @default(now())
  lastScanId   Int      @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  lastScan Scan @relation("ScanToCommon", fields: [lastScanId], references: [id])

  @@map("COMMON")
}
